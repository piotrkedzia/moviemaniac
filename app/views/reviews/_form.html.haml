= render 'shared/errors', object: review
%fieldset
  %ol
    = form_for([movie, review]) do |f|
      %li.required
        = f.label :name
        %br/
        = f.text_field :name
      %li.required.stars
        = f.label :stars
        - Review::STARS.each do |star|
          %span.star
            = f.radio_button :stars, star
            = star
      %li.required
        = f.label :comment
        %br/
        = f.text_field :comment, size: 50
      %br/
      = f.submit

%br
= simple_form_for([movie, review], html: { class: 'form-horizontal'  }) do |f|
  = f.input :name
  = f.input :stars, collection: Review::STARS, as: :radio_buttons
  = f.input :comment
  = f.submit

%br
%form
  %div.form-group
    %label(for="exampleInputEmail1")
      Email address
    %input(type="email" class="form-control" id="exampleInputEmail1" placeholder="Email")

  .form-group
    %label(for="exampleInputPassword1")
      Password
    %input(type="password" class="form-control" id="exampleInputPassword1" placeholder="Password")

  .form-group
    %label(for="exampleInputFile")
      File input
    %input(type="file" id="exampleInputFile")
      %p.help-block Example block-level help text here.

  .checkbox
    %label
      %input(type="checkbox") Check me out

  %button(type="submit" class="btn btn-default") Submit

