<h1><%= pluralize(@reviews.size,'Review') %> for <%= link_to(@movie.title,@movie) %></h1>

<ol id="reviews">
  <% @reviews.each do |review| %>
    <li>
      <p>
        <%= pluralize(review.stars,'star') %> by <strong><%= review.name %> </strong>
        <%= link_to "Edit", edit_movie_review_path(@movie, review)  %> 
        <%= link_to "Delete ", movie_review_path(@movie,review), method: :delete,  data:{confirm: "Are You sure?"}%>
        <br/><%= review.comment %> 
        (<%= time_ago_in_words(review.created_at) %>)
      </p>
    </li>
  <% end %>
</ol>
