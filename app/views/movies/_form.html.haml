= form_for(movie) do |f|
  = render 'shared/errors', object: movie
  %fieldset
    %ol
      %li.required
        = f.label :title
        = f.text_field :title, autofocus: true
      %li.required
        = f.label :description
        = f.text_area :description, cols: 40, rows: 7
      %li.required
        = f.label :rating
        = f.select :rating, Movie::RATINGS, prompt: "Pick one"
      %li.required
        = f.label :released_on
        = f.date_select :released_on
      %li.required
        = f.label :total_gross
        = f.number_field :total_gross
      %li.required
        = f.label :duration
        = f.text_field :duration, size: 10
      %li
        = f.label :cast
        = f.text_field :cast
      %li
        = f.label :director
        = f.text_field :director
      %li
        = f.label :image
        = f.file_field :image
      %li
        = movie.image_for(:medium)
    %p
      = f.submit
      = link_to "Cancel", movies_path, class: 'button'
